.text-center
  %h3.general-login-title Sign up
  = render 'devise/shared/facebook_authorize_link'
  %p.general-login-text or
= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
  .form-inputs
    = f.input :email, autofocus: true
    = f.input :password
    = f.input :password_confirmation
    = f.input :remember_me, as: :boolean, wrapper_html: { class: 'text-center mb-30' } if devise_mapping.rememberable?
  .form-actions.actions.text-center
    = f.button :submit, 'Sing up'
= render 'devise/shared/new_session_link'
